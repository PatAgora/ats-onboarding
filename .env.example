# Copy to .env and fill values
FLASK_SECRET_KEY=change-this
DATABASE_URL=sqlite:///ats.db

# TrustID config (placeholder)
TRUSTID_BASE_URL=https://api.trustid.co.uk
TRUSTID_API_KEY=your_trustid_api_key
TRUSTID_WEBHOOK_SECRET=optional_shared_secret

# ---- ChatGPT (optional) ----
# Set this ONLY if you want LLM features (normalising questions, etc.).
OPENAI_API_KEY=your_openai_api_key_here

# E-sign provider: 'dropbox_sign' or 'docusign'
ESIGN_PROVIDER=dropbox_sign

# Dropbox Sign (HelloSign) API
HELLOSIGN_API_KEY=your_hellosign_api_key

# DocuSign (use a pre-generated access token for simplicity, or implement OAuth JWT)
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
DOCUSIGN_ACCESS_TOKEN=your_docusign_access_token
DOCUSIGN_ACCOUNT_ID=your_account_id
DOCUSIGN_FROM_NAME=Talent Ops
DOCUSIGN_FROM_EMAIL=talent@example.com

# SMTP for onboarding emails & calendar invites
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_FROM="Talent Ops <talent@example.com>"

# Calendar invite defaults
INTERVIEWER_EMAIL=interviewer@example.com
TIMEZONE=Europe/London

# App base URL (public for webhooks & candidate links)
APP_BASE_URL=http://127.0.0.1:5000
